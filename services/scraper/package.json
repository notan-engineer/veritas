{
  "name": "veritas-scraper",
  "version": "1.0.0",
  "description": "Crawlee-based news content scraper for Veritas platform",
  "main": "dist/api-server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/api-server.js",
    "dev": "ts-node src/api-server.ts",
    "clean": "rm -rf dist",
    "rebuild": "npm run clean && npm run build",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:logs": "ts-node src/test-logs.ts",
    "clear:data": "ts-node src/clear-data.ts"
  },
  "dependencies": {
    "@types/pg": "^8.10.0",
    "cors": "^2.8.5",
    "crawlee": "^3.5.0",
    "dotenv": "^17.2.0",
    "express": "^4.18.0",
    "node-fetch": "^2.7.0",
    "pg": "^8.12.0",
    "playwright": "^1.40.0",
    "rss-parser": "^3.13.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.0",
    "@types/express": "^4.17.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.0.0",
    "@types/uuid": "^9.0.0",
    "jest": "^30.1.3",
    "ts-jest": "^29.4.4",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18"
  },
  "keywords": [
    "scraper",
    "crawlee",
    "news",
    "rss",
    "veritas"
  ],
  "author": "Veritas Team",
  "license": "MIT"
}
